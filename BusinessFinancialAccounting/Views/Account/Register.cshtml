@model BusinessFinancialAccounting.Models.User

<h2>Реєстрація</h2>

<form asp-action="Register" method="post">
    <div class="mb-3">
        <label class="form-label">Логін:</label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">ПІБ:</label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Пароль:</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Підтвердження пароля:</label>
        <input name="confirmPassword" type="password" />
    </div>
    <div class="mb-3">
        <label class="form-label">Телефон:</label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Email:</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Стартовий капітал (готівка):</label>
        <input name="cashBalance" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Стартовий капітал (карта):</label>
        <input name="cardBalance" type="number" />
    </div>
    <button type="submit" class="btn btn-primary">Зареєструватися</button>
</form>


