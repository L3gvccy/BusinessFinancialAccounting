@model BusinessFinancialAccounting.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Зміна паролю";
}

<div class="d-block mx-auto my-3 p-3" style="max-width: 500px">
    <h2 class="text-center mb-3">Змінити пароль</h2>

    <form asp-action="ChangePassword" method="post">
        <div class="mb-3">
            <label class="form-label">Новий пароль</label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Підтвердження паролю</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Змінити пароль</button>
    </form>
</div>